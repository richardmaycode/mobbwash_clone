<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Mobbwash" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= tag.meta name: "vapid-public-key", content: Rails.application.credentials.dig(:webpush, :public_key) %>
    <%= csp_meta_tag %>
    <%= yield :head %>
    <link rel="manifest" href="/manifest.json">
    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <script async defer src="https://maps.googleapis.com/maps/api/js?key=<%= Rails.application.credentials.dig(:google, :maps_api_key) %>&libraries=places,marker&callback=initMap&loading=async" data-turbolinks-eval="false"></script>
    <script src="https://js.stripe.com/v3/"></script>
  </head>
  <body>
    <%= render "shared/nav" %>
    <main class="container mx-auto mt-4 px-5 max-w-full md:max-w-[900px] mb-36">
      <%= yield %>
    </main>
    <%= render "shared/flash" %>
    <%= render "shared/bottom_nav", locals: { action: @action } %>
    <script>
      window.initMap = function (...args) {
        const event = new Event('google-maps-callback', { bubbles: true, cancelable: true });
        event.args = args;
        document.dispatchEvent(event);
      };
    </script>
  </body>
</html>
