<div class="block p-6 bg-white border border-gray-200 rounded-lg shadow  dark:bg-gray-800 dark:border-gray-700">
  <div class="mb-2 flex justify-between items-start">
    <h5 class="text-2xl font-bold tracking-tight text-gray-900 dark:text-white">#<%= request.request_number %></h5>
    <div class="<%= classes_for_request_status(request.status) %>text-xs font-medium me-2 px-2.5 py-0.5 rounded"><%= request.status.upcase %></div>
  </div>
  <div>
    <div>
      Location: <%= request.location %>
      <br />
      Vehicle Details: <%= request.vehicle.merged_name%>
    </div>
    <div class="grid md:grid-cols-3 grid-cols-1 sm:grid-cols-2 mt-8 text-center">
      <%= link_to "View Details", vendor_request_path(request), class: "py-2.5 px-5 me-2 mb-2 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:ring-gray-100 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700" %>
      <% if request.available? %>
        <%= link_to "Claim", new_vendor_request_claim_path(request), class: "text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800" %>
      <% elsif request.assigned? %>
        <%= link_to "Mark Complete", "#", class: "text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800" %>
      <% end %>
    </div>
  </div>
</div>