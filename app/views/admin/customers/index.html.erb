<div>
  <div class="my-4 grid lg:grid-cols-2 grid-cols-1 justify-between">
    <h1 class="font-bold text-4xl mb-4">Customers</h1>
    <%= render "search" %>
  </div>
  <%= turbo_frame_tag "customers" do %>
    <% if @customers.any? %>
      <%= render "customers", customers: @customers %>
    <% else %>
      <div class="flex justify-center my-8">No Results Found</div>
    <% end %>
  </div>
<% end %>
<div class="flex justify-center my-8">
  <%== pagy_nav(@pagy) %>
</div>
</div>
