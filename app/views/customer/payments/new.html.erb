<div class="grid md:grid-cols-2 gap-6">
  <%#= tag.div data: { 
                controller: "stripe",
                stripe_public_key_value: Pay::Stripe.public_key,
                stripe_client_secret_value: @checkout_session.client_secret
              } 
  %>
  <%= tag.div data: { controller: "stripe-payment-methods", stripe_payment_methods_public_key_value: Pay::Stripe.public_key } do %>
    <div id="payments-method" data-stripe-payment-methods-target="method"></div>
    <div id="payment" data-stripe-payment-methods-target="payment"></div>
  <% end %>
  <div>
    <h1 class="text-3xl mb-4">Payment for #<%= @request.request_number %></h1>
    <div class="flex flex-col gap-4">
      <div class="p-6 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
        <a href="#">
          <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">Summary</h5>
        </a>
        <div class="mb-3 font-normal text-gray-700 dark:text-gray-400"><%= @request.location %> <br/>
          <ul role="list" class="divide-y divide-gray-100">
            <li class="flex justify-between gap-x-6 py-5">
              <div class="flex gap-x-4">
                <!--                  <img class="h-12 w-12 flex-none rounded-full bg-gray-50" src="https://images.unsplash.com/photo-1494790108377-be9c29b29330?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80" alt="">
-->
                <!--                <div class="flex-auto">
                  <p class="text-sm font-semibold leading-6 text-gray-900">Vehicle</p>
                  <p class="mt-1 truncate text-xs leading-5 text-gray-500"><%#= @request.vehicle.nickname %></p>
                  <p class="mt-1 truncate text-xs leading-5 text-gray-500"><%#= @request.vehicle.merged_name %></p>
                </div>-->
              </div>
            </li>
            <li class="flex justify-between gap-x-6 py-5">
              <div class="flex gap-x-4">
                <div class="flex-auto">
                  <p class="text-sm font-semibold leading-6 text-gray-900">Wash Location</p>
                  <p class="mt-1 truncate text-xs leading-5 text-gray-500"><%= @request.location %></p>
                </div>
              </div>
            </li>
            <li class="flex justify-between gap-x-6 py-5">
              <div class="flex gap-x-4">
                <div class="flex-auto">
                  <p class="text-sm font-semibold leading-6 text-gray-900">Service</p>
                  <!--<p class="mt-1 truncate text-xs leading-5 text-gray-500"><%#= @request.services.first.name %></p>-->
                </div>
              </div>
            </li>
          </ul>
        </div>
      </div>
      <!--Vendor Card -->
      <div class="p-6 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
        <a href="#">
          <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">Vendor Details</h5>
        </a>
        <div class="mb-3 font-normal text-gray-700 dark:text-gray-400">
          <div class="grid grid-cols-3">
            <ul role="list" class="divide-y divide-gray-100">
              <li class="flex justify-between gap-x-6 py-5">
                <div class="flex gap-x-4">
                  <!--                  <img class="h-12 w-12 flex-none rounded-full bg-gray-50" src="https://images.unsplash.com/photo-1494790108377-be9c29b29330?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80" alt="">
-->
                  <div class="flex-auto">
                    <p class="text-sm font-semibold leading-6 text-gray-900">Business Name</p>
                    <p class="mt-1 truncate text-xs leading-5 text-gray-500"><%= @request.vendor.name %></p>
                  </div>
                </div>
              </li>
              <li class="flex justify-between gap-x-6 py-5">
                <div class="flex gap-x-4">
                  <div class="flex-auto">
                    <p class="text-sm font-semibold leading-6 text-gray-900">Contact Details</p>
                    <p class="mt-1 truncate text-xs leading-5 text-gray-500"><%= @request.vendor.full_address %></p>
                    <p class="mt-1 truncate text-xs leading-5 text-gray-500"><%= @request.vendor.phone_number %></p>
                    <p class="mt-1 truncate text-xs leading-5 text-gray-500"><%= @request.vendor.email %></p>
                  </div>
                </div>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>