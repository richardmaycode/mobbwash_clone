<%= form_with model: [:customer, @vehicle] do |f| %>
  <div class="my-4">
    <%= f.label :nickname, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
    <%= f.text_field :nickname, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", placeholder: "Seabiscuit" %>
  </div>
  <div class="my-4">
    <%= f.label :make, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
    <%= f.select :make, Vehicle::MAKES.map { |m| [m, m]} ,{ },class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", placeholder: "Seabiscuit", disabled: @vehicle.requests.any? %>
  </div>
  <div class="my-4">
    <%= f.label :model, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
    <%= f.select :model, Vehicle::MODELS.map { |m| [m, m]} ,{ },class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", placeholder: "Seabiscuit", disabled: @vehicle.requests.any? %>
  </div>
  <div class="my-4">
    <%= f.label :color, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
    <%= f.select :color, Vehicle::COLORS.map { |m| [m, m]} ,{ },class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", placeholder: "Seabiscuit", disabled: @vehicle.requests.any? %>
  </div>
  <div class="my-4">
    <%= f.label :license_plate, "License Plate (Optional)", class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
    <%= f.text_field :license_plate, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", placeholder: "" %>
  </div>
  <div class="my-4">
    <%= f.submit class: "w-full text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800" %>
  </div>
  <div class="my-4">
    <%= link_to "Cancel", customer_vehicles_path, class: "block text-center w-full py-2.5 px-5 me-2 mb-2 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:ring-gray-100 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700" %>
  </div>
<% end %>