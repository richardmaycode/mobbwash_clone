<div class="grid w-full gap-6 md:grid-cols-2">
    <% @requests.each do |request| %>
        <%= link_to class: "block max-w-sm p-6 bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-700" do %>
            <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">Request #<%= request.request_number %></h5>
            <p class="font-normal text-gray-700 dark:text-gray-400">Service: <%= request.services.first.name %></p>
        <% end %>

    <% end %>
</div>
<%== pagy_nav(@pagy) %>